<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.diogo_julia.financialcontrol" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="16" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:name=".application.Aplicacao"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".application.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".app.activities.conta.CadastroContaActivity"
            android:label="@string/title_activity_cadastro_conta" >
        </activity>
        <activity
            android:name=".app.activities.login.LoginActivity"
            android:label="@string/title_activity_login" >
        </activity>
        <activity
            android:name=".app.activities.categoria.CategoriaPopupActivity"
            android:label="@string/title_activity_categoria_popup"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".app.activities.conta.ListarContasActivity"
            android:label="@string/title_activity_contas_mensal"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".app.activities.cartaodecredito.CadastroCartaoCreditoActivity"
            android:label="@string/title_activity_cadastro_cartao_credito"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".app.activities.cartaodecredito.ListarCartoesActivity"
            android:label="@string/title_activity_listar_cartoes"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".app.activities.conta.ListarContasCreditoActivity"
            android:label="@string/title_activity_listar_contas_credito"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".app.GraficoActivityTentativaUm"
            android:label="GRAFICO"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".app.activities.conta.ListarResumoActivity"
            android:label="Resumo"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".app.graficos.ResumoCategoriasGrafico"
            android:label="@string/title_activity_resumo_categorias_grafico"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>

        <activity
            android:name=".app.listeners.btnCadastrarContaListener"
            android:label="@string/title_activity_resumo_categorias_grafico"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
    </application>

</manifest>
